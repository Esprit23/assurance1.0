<!DOCTYPE html>
<html lang="fr">
<head>
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<title>Assurance ARO</title>
	<meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />

	<!-- Styles -->
	{% include 'partials/styles.html.twig' %}
</head>
<body>
	<div class="wrapper">
		<!-- Navbar Header -->
		{% include 'partials/navbar_header.html.twig' %}

		<!-- Sidebar -->
		{% include 'partials/sidebar.html.twig' %}

		<div class="main-panel">
			<div class="content">
				<div class="page-inner">
					<div class="page-header">
						<h4 class="page-title">Formulaire véhicules</h4>
					</div>
					<div class="row">
						<div class="col-md-12">
							<div class="card">
								{{ form_start(form) }}
									<div class="card-header">
										<div class="card-title">Véhicules</div>
									</div>
									<div class="card-body">
										
										<div class="form-group">
											{{ form_label(form.matricule) }}
											{{ form_widget(form.matricule, {'attr': {'class': 'form-control', 'placeholder': 'Matricule'}}) }}
										</div>
										<div class="form-group">
											{{ form_label(form.marque_type) }}
											{{ form_widget(form.marque_type, {'attr': {'class': 'form-control', 'placeholder': 'Marque et type'}}) }}
										</div>
										<div class="form-group">
											{{ form_label(form.numSerie) }}
											{{ form_widget(form.numSerie, {'attr': {'class': 'form-control', 'placeholder': 'Numero de série'}}) }}
										</div>
										<div class="form-group">
											{{ form_label(form.carosserie) }}
											{{ form_widget(form.carosserie, {'attr': {'class': 'form-control', 'placeholder': 'Carosserie'}}) }}
										</div>
                                        <div class="form-group">
											{{ form_label(form.puissance) }}
											{{ form_widget(form.puissance, {'attr': {'class': 'form-control', 'placeholder': 'Puissance'}}) }}
										</div>
										<div class="form-group">
											{{ form_label(form.dateEmission) }}
											{{ form_widget(form.dateEmission, {'attr': {'class': 'form-control', 'placeholder': 'Date d emission'}}) }}
										</div>
										<div class="form-group">
											{{ form_label(form.usageVehicule) }}
											{{ form_widget(form.usageVehicule, {'attr': {'class': 'form-control', 'placeholder': 'Usage'}}) }}
										</div>
										<div class="form-group">
											{{ form_label(form.energie) }}
											{{ form_widget(form.energie, {'attr': {'class': 'form-control', 'placeholder': 'Energie'}}) }}
										</div>
                                        <div class="form-group">
											{{ form_label(form.place) }}
											{{ form_widget(form.place, {'attr': {'class': 'form-control', 'placeholder': 'Place'}}) }}
										</div>
										
									</div>
									<div class="card-action">
										<button type="submit" class="btn btn-success">Enregistrer</button>
										<a href="{{ path('app_vehicule') }}" class="btn btn-danger">Annuler</a>
									</div>
								{{ form_end(form) }}
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>

	</div>
	
	{% include 'partials/javascript.html.twig' %}  
</body>
</html>